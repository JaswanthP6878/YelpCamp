<% layout('layouts/boilerplate') %> 
    <h1>All campgrounds!!</h1>
    <a href="/campgrounds/new">Create a new camp</a>
    <ul>
        <% for( let camp of camps) { %>
            <div class="card">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <img class = "img-fluid" src="<%= camp.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class = "card-title"> <%= camp.title %> </h5>
                            <P class = "class-text" ><%= camp.description %></P>
                            <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">view site</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
    </ul>
    
